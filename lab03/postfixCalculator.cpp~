#include "postfixCalculator.h"
#include "stack.h"
#include <iostream>

using namespace std;

postfixCalculator::postfixCalculator() {
   stack = calcStack();
}

void postfixCalculator::addition() {
  int i;
  int j;
  if (!stack.empty()) {
    i = stack.top();
    stack.pop();
  }
  if (!stack.empty()) {
    j = stack.top();
    stack.pop();
    stack.push(i + j);
  }
}

void postfixCalculator::subtraction() {
  int i;
  int j;
  if (!stack.empty()) {
    i = stack.top();
    stack.pop();
  }
  if (!stack.empty()) {
    j = stack.top();
    stack.pop();
    stack.push(j - i);
  }
}

void postfixCalculator::multiplication() {
  int i;
  int j;
  if (!stack.empty()) {
    i = stack.top();
    stack.pop();
  }
  if (!stack.empty()) {
    j = stack.top();
    stack.pop();
    stack.push(i * j);
  }
}

void postfixCalculator::division() {
  int i;
  int j;
  if (!stack.empty()) {
    i = stack.top();
    stack.pop();
  }
  if (!stack.empty()) {
    j = stack.top();
    stack.pop();
    stack.push(j / i);
  }
}

void postfixCalculator::negation() {
  int i;
  if (!stack.empty()) {
    i = stack.top();
    stack.pop();
    stack.push(0 - i);
  }
}
